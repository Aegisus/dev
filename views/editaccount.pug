extends index.pug
block vars
    - var title='Edit profile'
block content
    .mt-5.container-fluid(style="width: 50%;")
        //- h1 Read
        //- button(id = "testbtnR") test read
        //- student
        h1 Edit account
        //- #edit_form
        //- form(id = 'edit' class="form-group")
            input(type='text' id='update_skill' class="form-control")
            input(type='text' id='update_prof' class="form-control")
            button(id = 'editcfm') Confirm
        //- form(id = 'edit' class="form-group")
        //-     input(type='text' id='update_comdes' class="form-control")
